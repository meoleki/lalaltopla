@model WebApplication2.Models.UserViewModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>Регистрация</h2>

@using (Html.BeginForm())
{
    <form class="form-horizontal">
        <hr />
        <div>
            <input id="Name" name="Name" type="text" placeholder="Имя" style="border-radius: 4px" />   ▬   Имя*<br />
            @Html.ValidationMessageFor(user => user.Name)<br />
        </div>
        <div>
            <input id="Login" name="Login" type="text" placeholder="Логин"style="border-radius: 4px"/>   ▬   Логин*<br />
            @Html.ValidationMessageFor(user => user.Login)<br />
        </div>
        <div>
            <input id="Password" name="Password" type="text" placeholder="Пароль" style="border-radius: 4px"/>   ▬   Пароль*<br />
            @Html.ValidationMessageFor(user => user.Password)<br />
        </div>
        <div>
            <input id="CPassword" name="CPassword" type="text" placeholder="Повторите пароль" style="border-radius: 4px"/>   ▬   Повторите пароль*<br />
            @Html.ValidationMessageFor(user => user.CPassword)<br />
        </div>

        <div>
            <select size="1"id="Age" name="Age" style="width:174px; height: 26px; border-radius: 4px">
                <option selected disabled>Год рождения</option>
                <option value="1986">1986</option>
                <option value="1987">1987</option>
                <option value="1988">1988</option>
                <option value="1989">1989</option>
                <option value="1990">1990</option>
                <option value="1991">1991</option>
                <option value="1992">1992</option>
                <option value="1993">1993</option>
                <option value="1994">1994</option>
                <option value="1995">1995</option>
                <option value="1996">1996</option>
                <option value="1997">1997</option>
                <option value="1998">1998</option>
                <option value="1999">1999</option>
            </select>   ▬   Год рождения:*

            @Html.ValidationMessageFor(user => user.Age)
            <br /><br />

            <div class="form-group">
                <label for="eInputFile">Прикрепите изображение для аватара</label>
                <input accept ="image/*" type="file" id="eInputFile" name="eInputFile" />
            </div>

            <br />
            <h6>*Поля помеченные звездочкой обязательны для заполнения</h6><br />
        </div>
            <div>
                <div>
                    <input class="btn btn-sm btn-default" type="submit" value="Зарегестрироваться" />
                </div>
            </div>
            <br />

            @Html.ActionLink("Домашняя страница", "Index", "Home")


        </form>

}

